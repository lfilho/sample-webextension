{
  "name": "sample-webextension",
  "version": "0.0.1",
  "description": "Tracker blocker extension",
  "type": "module",
  "main": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lfilho/sample-webextension.git"
  },
  "author": "anonymous",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lfilho/sample-webextension/issues"
  },
  "homepage": "https://github.com/lfilho/sample-webextension#readme",
  "scripts": {
    "build": "npm run web-ext -- build",
    "develop": "npm run web-ext -- run",
    "format": "prettier --write \"**/*.{js,json,css,md}\"",
    "//": "eslint is configured with prettier, so it will check and fix js formatting too",
    "lint": "npm run lint:js && npm run lint:ext",
    "lint:ext": "npm run web-ext -- lint",
    "lint:js": "eslint **/*.js",
    "lint:js:fix": "npm run lint:js -- --fix",
    "pretest": "npm run lint",
    "release": "semantic-release",
    "start": "npm run develop",
    "test": "echo '//TODO' && exit 0",
    "web-ext": "web-ext"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/github": "7.0.7",
    "@semantic-release/release-notes-generator": "9.0.1",
    "conventional-changelog-conventionalcommits": "4.3.0",
    "eslint": "7.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-formatter-pretty": "3.0.1",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "lint-staged": "10.2.9",
    "prettier": "2.0.5",
    "semantic-release": "17.0.8",
    "web-ext": "4.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,css,md}": "npm run format --",
    "*.js": [
      "eslint --fix",
      "web-ext lint"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "es2017": true,
      "webextensions": true
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ]
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "webExt": {
    "sourceDir": "src",
    "artifactsDir": "dist"
  }
}
